<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @post.username %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if current_user.id == @post.user_id %>
      <%= link_to '編集', edit_post_path(@post) %> |
      <%= link_to '削除', @post, method: :delete, data: { confirm: '本当に削除しますか？' } %> |
    <% end %>
    
<%= link_to '戻る', posts_path %>
