<p id="notice"><%= notice %></p>

<h1>タイムライン</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.username, post_path(post) %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

